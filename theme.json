{
	"name": "Halloween Theme",
	"colors": {
		"editor.background": "#0D0D0D", // Darker, spookier background
		"editor.foreground": "#FF7518", // Halloween orange for the main text
		"activityBarBadge.background": "#FF4500", // Bright orange for the activity bar
		"sideBarTitle.foreground": "#CCCCCC", // Light gray for better contrast on the sidebar
		"editor.lineHighlightBackground": "#292929", // Subtle highlight for line
		"statusBar.background": "#1b1b1b", // Dark status bar for a consistent spooky look
		"statusBar.foreground": "#FF7518" // Bright text on the status bar
	},
	"tokenColors": [
		{
			"name": "Comment",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#666666" // Dim gray for comments
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
				"string constant.other.placeholder"
			],
			"settings": {
				"foreground": "#FFDD00" // Yellow for variables
			}
		},
		{
			"name": "Colors",
			"scope": [
				"constant.other.color"
			],
			"settings": {
				"foreground": "#FF7518" // Halloween orange for color constants
			}
		},
		{
			"name": "Invalid",
			"scope": [
				"invalid",
				"invalid.illegal"
			],
			"settings": {
				"foreground": "#FF0000", // Red to show errors
				"fontStyle": "bold"
			}
		},
		{
			"name": "Keyword, Storage",
			"scope": [
				"keyword",
				"storage.type",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#C792EA" // Purple for keywords
			}
		},
		{
			"name": "Operator, Misc",
			"scope": [
				"keyword.control",
				"punctuation",
				"meta.tag",
				"punctuation.definition.tag"
			],
			"settings": {
				"foreground": "#F78C6C" // Soft orange for operators and tags
			}
		},
		{
			"name": "Tag",
			"scope": [
				"entity.name.tag",
				"meta.tag.sgml"
			],
			"settings": {
				"foreground": "#FF4500" // Bright Halloween orange for tags
			}
		},
		{
			"name": "Function, Special Method",
			"scope": [
				"entity.name.function",
				"meta.function-call"
			],
			"settings": {
				"foreground": "#82AAFF" // Ghostly blue for functions
			}
		},
		{
			"name": "Block Level Variables",
			"scope": [
				"meta.block variable.other"
			],
			"settings": {
				"foreground": "#FF7518" // Highlight block-level variables in orange
			}
		},
		{
			"name": "Other Variable, String Link",
			"scope": [
				"support.other.variable",
				"string.other.link"
			],
			"settings": {
				"foreground": "#FF7518"
			}
		},
		{
			"name": "Number, Constant, Function Argument, Tag Attribute, Embedded",
			"scope": [
				"constant.numeric",
				"constant.language",
				"support.constant"
			],
			"settings": {
				"foreground": "#F78C6C" // Subtle orange for numbers and constants
			}
		},
		{
			"name": "String, Symbols, Inherited Class, Markup Heading",
			"scope": [
				"string",
				"constant.other.symbol"
			],
			"settings": {
				"foreground": "#C3E88D" // Greenish tint for strings
			}
		},
		{
			"name": "Class, Support",
			"scope": [
				"entity.name",
				"support.type"
			],
			"settings": {
				"foreground": "#FFCB6B" // Pumpkin yellow for classes
			}
		},
		{
			"name": "Entity Types",
			"scope": [
				"support.type"
			],
			"settings": {
				"foreground": "#B2CCD6" // Pale blue for entity types
			}
		},
		{
			"name": "CSS Class and Support",
			"scope": [
				"source.css support.type.property-name"
			],
			"settings": {
				"foreground": "#B2CCD6" // Match with entity types
			}
		},
		{
			"name": "Sub-methods",
			"scope": [
				"entity.name.module.js"
			],
			"settings": {
				"foreground": "#FF5370" // Red-pink for methods
			}
		},
		{
			"name": "Language methods",
			"scope": [
				"variable.language"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#FF5370"
			}
		},
		{
			"name": "entity.name.method.js",
			"scope": [
				"entity.name.method.js"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#82AAFF" // Cool blue for JS methods
			}
		},
		{
			"name": "Attributes",
			"scope": [
				"entity.other.attribute-name"
			],
			"settings": {
				"foreground": "#C792EA" // Purple for attributes
			}
		},
		{
			"name": "HTML Attributes",
			"scope": [
				"text.html.basic entity.other.attribute-name.html"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#FFCB6B"
			}
		},
		{
			"name": "Regular Expressions",
			"scope": [
				"string.regexp"
			],
			"settings": {
				"foreground": "#89DDFF" // Bright blue for regex
			}
		},
		{
			"name": "Escape Characters",
			"scope": [
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#89DDFF"
			}
		},
		{
			"name": "URL",
			"scope": [
				"*url*",
				"*link*",
				"*uri*"
			],
			"settings": {
				"fontStyle": "underline"
			}
		},
		{
			"name": "Decorators",
			"scope": [
				"tag.decorator.js entity.name.tag.js"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#82AAFF"
			}
		}
	]
}
